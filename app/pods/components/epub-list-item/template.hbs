{{#paper-card}}
    <div class="item-image" style="background-image: url('{{data.cover}}')">
    </div>

    {{#paper-card-content}}
        <h2>{{data.title}} <small>{{data.creator}}</small></h2>
        <p>{{truncate data.description 300}}</p>
    {{/paper-card-content}}

    <div class="md-actions" layout="row" layout-align="end center">
        {{#paper-button action="transfer"}}Transfer to usb{{/paper-button}}
    </div>
{{/paper-card}}
