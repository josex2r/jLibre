{{#paper-card}}
    <div class="item-image" style={{style}} {{action "showDetail"}}></div>

    {{#paper-card-content action="showDetail"}}
        <h2>{{data.title}} <small>{{data.creator}}</small></h2>
        <p>{{truncate data.description 300}}</p>
    {{/paper-card-content}}

    <div class="md-actions" layout="row" layout-align="end center">
        {{#paper-button action="transfer"}}{{t 'transferToUsb'}}{{/paper-button}}
    </div>
{{/paper-card}}
