                <div class="col-xs-7">
                    {{#each model as |epub|}}
                        <div class="row">
                            <div class="col-xs-3 cover">
                                <img class="img-responsive" src={{epub.cover}} />
                            </div>
                            <div class="col-xs-9">
                                <div class="page-header">
                                    <h1>{{epub.title}} <small>{{epub.creator}}</small></h1>
                                </div>
                                <h4 class="email-subject">{{epub.subject}}</h4>
                                <p>{{truncate epub.description 300}}</p>
                            </div>
                        </div>
                        <hr/>
                    {{/each}}
                </div>

                <div class="col-xs-5">
                    {{outlet}}
                </div>
            </div>
